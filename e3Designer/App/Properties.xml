<Element
    width="220dp"
    height="100%"
    backgroundColor="glm::vec4(150, 150, 150, 255)"
    borderSize="2dp"
    borderColor="glm::vec4(50, 50, 50, 255)"
    orientation="Vertical"
    alignItemsVer="Start">

    <!-- Size -->
    <UiExpander
        width="100%">
        <UiExpanderBody
            width="100%"
            backgroundColor="glm::vec4(255, 0, 0, 255)"
            orientation="Vertical">
            <PropItemNumber
                element="mWidthItem"
                title="_s(Width)">
            </PropItemNumber>
            <PropItemNumber
                element="mHeightItem"
                title="_s(Height)">
            </PropItemNumber>
        </UiExpanderBody>
    </UiExpander>

    <!-- Margin -->
    <UiExpander
        width="100%">
        <UiExpanderBody
            width="100%"
            backgroundColor="glm::vec4(255, 0, 0, 255)"
            orientation="Vertical">
            <PropItemNumber
                element="mMarginLeftItem"
                title="_s(Left)">
            </PropItemNumber>
            <PropItemNumber
                element="mMarginRightItem"
                title="_s(Right)">
            </PropItemNumber>
            <PropItemNumber
                element="mMarginTopItem"
                title="_s(Top)">
            </PropItemNumber>
            <PropItemNumber
                element="mMarginBottomItem"
                title="_s(Bottom)">
            </PropItemNumber>
        </UiExpanderBody>

    </UiExpander>

</Element>