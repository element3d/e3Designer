<Element
    width="300dp"
    height="100%"
    borderColor="glm::vec4(220, 220, 220, 255)"
    orientation="Vertical"
    alignItemsVer="Start">

    <!-- Size -->
    <UiExpander
        width="100%">
        <UiExpanderHeaderDefault
            title="_s(Size)">
        </UiExpanderHeaderDefault>
        <UiExpanderBody
            width="100%"
            alignItemsHor="End"
            orientation="Vertical">
            <PropItemNumber
                element="mWidthItem"
                title="_s(Width)">
            </PropItemNumber>
            <PropItemNumber
                element="mHeightItem"
                title="_s(Height)">
            </PropItemNumber>
        </UiExpanderBody>
    </UiExpander>

    <!-- Margin -->
    <UiExpander
        width="100%">
        <UiExpanderHeaderDefault
            title="_s(Margin)">
        </UiExpanderHeaderDefault>
        <UiExpanderBody
            width="100%"
            alignItemsHor="End"
            orientation="Vertical">
            <PropItemNumber
                element="mMarginLeftItem"
                title="_s(Left)">
            </PropItemNumber>
            <PropItemNumber
                element="mMarginRightItem"
                title="_s(Right)">
            </PropItemNumber>
            <PropItemNumber
                element="mMarginTopItem"
                title="_s(Top)">
            </PropItemNumber>
            <PropItemNumber
                element="mMarginBottomItem"
                title="_s(Bottom)">
            </PropItemNumber>
        </UiExpanderBody>
    </UiExpander>

    <!-- Padding -->
    <UiExpander
        width="100%">
        <UiExpanderHeaderDefault
            title="_s(Padding)">
        </UiExpanderHeaderDefault>
        <UiExpanderBody
            width="100%"
            alignItemsHor="End"
            orientation="Vertical">
            <PropItemNumber
                element="mPaddingLeftItem"
                title="_s(Left)">
            </PropItemNumber>
            <PropItemNumber
                element="mPaddingRightItem"
                title="_s(Right)">
            </PropItemNumber>
            <PropItemNumber
                element="mPaddingTopItem"
                title="_s(Top)">
            </PropItemNumber>
            <PropItemNumber
                element="mPaddingBottomItem"
                title="_s(Bottom)">
            </PropItemNumber>
        </UiExpanderBody>
    </UiExpander>

    <!-- Layout -->
    <UiExpander
        width="100%">
        <UiExpanderHeaderDefault
            title="_s(Layout)">
        </UiExpanderHeaderDefault>
        <UiExpanderBody
            width="100%"
            alignItemsHor="End"
            orientation="Vertical">
            <PropItemCombo
                element="mOrientationItem"
                title="_s(Orientation)">
                <UiComboBoxItem
                    title="_s(Horizontal)">
                </UiComboBoxItem>
                <UiComboBoxItem
                    title="_s(Vertical)">
                </UiComboBoxItem>
            </PropItemCombo>
            <!-- Align items hor -->
            <PropItemCombo
                element="mAlignItemsHorItem"
                title="_s(AlignItemsHor)">
                <UiComboBoxItem
                    title="_s(Center)">
                </UiComboBoxItem>
                <UiComboBoxItem
                    title="_s(Start)">
                </UiComboBoxItem>
                <UiComboBoxItem
                    title="_s(End)">
                </UiComboBoxItem>
                <UiComboBoxItem
                    title="_s(SpaceBetween)">
                </UiComboBoxItem>
                <UiComboBoxItem
                    title="_s(SpaceAround)">
                </UiComboBoxItem>
            </PropItemCombo>
            <!-- Align items ver -->
            <PropItemCombo
                element="mAlignItemsVerItem"
                title="_s(AlignItemsVer)">
                <UiComboBoxItem
                    title="_s(Center)">
                </UiComboBoxItem>
                <UiComboBoxItem
                    title="_s(Start)">
                </UiComboBoxItem>
                <UiComboBoxItem
                    title="_s(End)">
                </UiComboBoxItem>
                <UiComboBoxItem
                    title="_s(SpaceBetween)">
                </UiComboBoxItem>
                <UiComboBoxItem
                    title="_s(SpaceAround)">
                </UiComboBoxItem>
            </PropItemCombo>
         
        </UiExpanderBody>
    </UiExpander>


    <!-- Background -->
    <UiExpander
        width="100%">
        <UiExpanderHeaderDefault
            title="_s(Background)">
        </UiExpanderHeaderDefault>
        <UiExpanderBody
            width="100%"
            alignItemsHor="End"
            orientation="Vertical">
            <PropItemColor
                element="mBgColorItem"
                title="_s(Color)">
            </PropItemColor>
            <PropItemNumber
                element="mBgImageItem"
                title="_s(Image)">
            </PropItemNumber>
        </UiExpanderBody>
    </UiExpander>

</Element>